<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>user</param-name>
        <param-value>webcar</param-value>
    </context-param>
    <context-param>
        <param-name>senha</param-name>
        <param-value>cardig0!</param-value>
    </context-param>
    <context-param>
        <param-name>driver</param-name>
        <param-value>oracle.jdbc.OracleDriver</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <!--<param-value>jdbc:oracle:thin:@localhost:1521:XE</param-value>-->
        <param-value>jdbc:oracle:thin:@192.168.3.7:1521:XE</param-value> 
        <!--<param-value>jdbc:oracle:thin:@aula.inf.poa.ifrs.edu.br:1521:XE</param-value>-->
    </context-param>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
     <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>controle.FrontController</servlet-class>
    </servlet>
    <error-page>
        <error-code>404</error-code>
        <location>/erro404.html</location>
    </error-page>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/FrontController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app> 